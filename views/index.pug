extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio 

      p.lead.text-light
        | Here you'll find some of my development efforts per the time I spent working through the Treehouse Javascript Tech Degree 
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project, index in projects 
          .cell
           a(href=`projects/${index}`)
            img.thumbnail(src= project.img_urls[0])
            h5= project.project_name
